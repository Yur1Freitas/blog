---
import '../style/fonts.css'
import '../style/global.css'
import '../style/themes.css'
import { SITE_TITLE } from '../config'

interface Props {
    title: string
    description: string
    image?: string
}

const { title, description, image = '/home-blog-card.png' } = Astro.props
---

<head>
    <!-- Global Metadata -->
    <meta charset='utf-8' />
    <meta content='width=device-width,initial-scale=1' name='viewport' />
    <link type='image/svg+xml' href='/favicon.ico' rel='icon' />
    <meta content={Astro.generator} name='generator' />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta content={title} name='title' />
    <meta content={description} name='description' />

    <!-- Open Graph / Facebook -->
    <meta property='og:type' content='website' />
    <meta content={Astro.url} property='og:url' />
    <meta property='og:title' content={title} />
    <meta property='og:description' content={description} />
    <meta content={new URL(image, Astro.url)} property='og:image' />

    <!-- Twitter -->
    <meta content='summary_large_image' property='twitter:card' />
    <meta property='twitter:url' content={Astro.url} />
    <meta property='twitter:title' content={title} />
    <meta property='twitter:description' content={description} />
    <meta content={new URL(image, Astro.url)} name='twitter:image' />

    <!-- RSS Link -->
    <link type='application/rss+xml' title={SITE_TITLE} rel='alternate' href='/rss.xml' />

    <!-- Sitemap -->
    <link href='/sitemap-index.xml' rel='sitemap' />
</head>
